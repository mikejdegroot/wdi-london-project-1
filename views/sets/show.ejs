<div class="row show-page-main">
  <section class="colomns col-lg-2 set-info">
    <aside class="setlist">
      <h4>Set List</h4>
      <% set.tracks.forEach((track) => { %>
        <p class="ps"><%= track.content %></p>
        <% if(locals.isLoggedIn && track.belongsTo(user)) { %>
          <form method="POST" action="/sets/<%= set.id %>/tracks/<%= track.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <button class="button-styles">Delete</button>
          </form>
        <% } %>
      <% }) %>
    </aside>
  </section>
  <section class="col-lg-4">
    <section class="set-title">
        <h3>set</h3>
        <ul>
          <li><h2 class="setname"><%= set.name %></h2></li>
          <li><h3 class="setdate"><%= set.date %></h3></li>
          <li><p class="setuser"><%=set.createdBy.username %></p></li>
        </ul>
      <div>
        <% if(locals.isLoggedIn && set.belongsTo(user)) { %>
          <a href="/sets/<%= set.id %>/edit" class="edit-button">Edit</a>
          <form method="POST" action="/sets/<%= set.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <button class="button-styles">Delete</button>
          </form>
        <% } %>
      </div>
      </section>
      <section class="colomns nowplaying">
          <% if(locals.isLoggedIn && set.belongsTo(user)) { %>
        <h4>What are you listening to?</h4>
        <div>
          <form method="POST" action="/sets/<%= set.id %>/tracks">
            <input type="text" name="content" id="content" placeholder="What's on??" value="<%= set.tracks.length ? set.tracks[set.tracks.length-1].content : '' %>"></input>
        </div>
          <button class="button-styles" >Add to set!</button>
          <button class="button-styles" type="button" id="getsong">Suggest a banger</button>
          <button class="button-styles" type="button" id="play">Play!</button>
        </form>
    </section>
  </section>
    <section class="colomns col-lg-3 upnext">
      <h4>Up Next...</h4>
      <div class="suggestion">
        <span id="result"></span>
      </div>
      <div class="cue-div">
        <button class="button-styles cue"> <<< cue </button>
      </div>
      <div class="movie-container">
        <div class="moviediv"></div>
      </div>
    </section>

  <% } %>
</div>
