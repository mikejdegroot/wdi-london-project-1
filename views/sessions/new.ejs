<!-- The login page, called session refering to the session cookie-->
<h1>Login</h1>
<form method="POST" action="/login" class="col-lg-4 submit-form">
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" name="email" id="email" class="form-control">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="form-control">
  </div>

  <button class="btn btn-primary">Login</button>
<a href="<%=oauth.facebook.getLoginUrl() %>" target="_blank" class="btn btn-primary">Login with Facebook</a>
</form>
